<%- include('../header'); -%>

<div class="row justify-content-center">
  <div class="col-5 mx-auto mt-2">
    <div class="card">
      <div class="card-header">Edit User</div>
      <div class="card-body">
        <form method="post">
          <div class="form-group">
            <label for="firstname">First name</label>
            <input
              type="text"
              class="form-control"
              id="firstname"
              name="firstname"
              placeholder="First name"
              value="<%=
            member.firstName %>"
            />
            <% if(errors && errors.firstname) { %>
            <p class="error"><%= errors.firstname.msg %></p>
            <% } %>
          </div>
          <div class="form-group">
            <label for="lastname">Last name</label>
            <input
              type="text"
              class="form-control"
              id="lastname"
              name="lastname"
              placeholder="Last name"
              value="<%=
            member.lastName %>"
            />
            <% if(errors && errors.lastname) { %>
            <p class="error"><%= errors.lastname.msg %></p>
            <% } %>
          </div>
          <div class="form-group">
            <label for="email">Email</label>
            <input
              type="email"
              class="form-control"
              id="email"
              name="email"
              aria-describedby="emailHelp"
              placeholder="Email"
              value="<%=
            member.email %>"
            />
            <% if(errors && errors.email) { %>
            <p class="error"><%= errors.email.msg %></p>
            <% } %>
          </div>
          <button type="submit" class="btn btn-primary">Submit</button>
          <a href="/users/home" class="btn btn-light">
            Cancel
          </a>
        </form>
      </div>
    </div>
  </div>
</div>

<%- include('../footer'); -%>
