<%- include('../header'); -%>

<div>
  <div class="row justify-content-center">
    <div class="col-8 mx-auto  mt-5">
      <a class="btn btn-primary float-right " href="/task/home" role="button"
        >View Task</a
      >
      <a class="btn btn-primary float-right mr-2" href="add" role="button"
        >Add User</a
      >
    </div>
  </div>

  <div class="row justify-content-center">
    <div class="col-8 mx-auto mt-2">
      <%- include('../alert'); -%>

      <table class="table table-bordered">
        <thead>
          <tr>
            <th>#</th>
            <th scope="col">FirstName</th>
            <th scope="col">LastName</th>
            <th scope="col">Email</th>
            <th scope="col">Action</th>
          </tr>
        </thead>
        <tbody>
          <% var c=1; if(member.length > 0 ) { for(var i = 0; i < member.length;
          i++) { %>
          <tr>
            <th scope="row"><%= c %></th>

            <td><%= member[i].firstName %></td>
            <td><%= member[i].lastName %></td>
            <td><%= member[i].email %></td>
            <td>
              <a
                href="/users/edit/<%= member[i]._id %>"
                class="btn btn-dark"
                href="#"
                role="button"
                >Edit</a
              >
              <a
                href="/users/delete/<%= member[i]._id %>"
                class="btn btn-danger"
                href="#"
                role="button"
                >Delete</a
              >
            </td>
          </tr>
          <% c++; } }else{ %>
          <tr>
            <td colspan="5">No Record Found</td>
          </tr>
          <% } %>
        </tbody>
      </table>
    </div>
  </div>
</div>
<%- include('../footer'); -%>
