<%- include('header'); -%>

<div class="row justify-content-center">
  <div class="col-5 mx-auto mt-2">
    <%- include('alert'); -%>

    <div class="card">
      <div class="card-header">Change Password</div>
      <div class="card-body">
        <form method="post">
          <div class="form-group">
            <label>Current Password</label>
            <input class="form-control" name="password" type="password" />
            <% if(errors && errors.password) { %>
            <p class="error"><%= errors.password.msg %></p>
            <% } %>
          </div>
          <div class="form-group">
            <label>New Password</label>
            <input class="form-control" name="new_password" type="password" />
            <% if(errors && errors.new_password) { %>
            <p class="error"><%= errors.new_password.msg %></p>
            <% } %>
          </div>
          <div class="form-group">
            <label>Confirm New Password</label>
            <input
              class="form-control"
              name="confirm_new_password"
              type="password"
            />
            <% if(errors && errors.confirm_new_password) { %>
            <p class="error"><%= errors.confirm_new_password.msg %></p>
            <% } %>
          </div>

          <button type="submit" class="btn btn-primary">Submit</button>
          <a href="/users/home" class="btn btn-light">
            Cancel
          </a>
        </form>
      </div>
    </div>
  </div>
</div>

<%- include('footer'); -%>
