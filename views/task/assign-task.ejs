<%- include('../header'); -%>

<div class="row justify-content-center">
  <div class="col-5 mx-auto mt-2">
    <div class="card">
      <div class="card-header">Assign Task</div>
      <div class="card-body">
        <form method="post">
          <div class="form-group row">
            <label for="task" class="col-sm-3 col-form-label">Task</label>
            <div class="col-sm-9">
              <input
                type="text"
                readonly
                class="form-control-plaintext"
                id="task"
                name="task"
                value="<%= task.task %>"
              />
            </div>
          </div>
          <div class="form-group">
            <label for="member">Member</label>
            <select class="form-control" id="member" name="member">
             
              <% if(member.length > 0) { for(var i = 0; i < member.length; i++)
              { %>
               
              <option value="<%= member[i].firstName %>" <% if(task.memberId == member[i]._id){ %> selected=selected <%  } %>
                ><%= member[i].firstName+' '+member[i].lastName %></option
              >
              <% } } %>
            </select>
          </div>

          <button type="submit" class="btn btn-primary">Submit</button>
          <a href="/task/home" class="btn btn-light">
            Cancel
          </a>
        </form>
      </div>
    </div>
  </div>
</div>

<%- include('../footer'); -%>
